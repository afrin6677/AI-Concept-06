{% extends 'partials/base.html.twig' %}
{% block article %}
  
  {% if config.data.iframe_url %}
    {% if '[WEBSITE_USER_ID]' in config.data.iframe_url %}
      {% set iframe_url = config.data.iframe_url | replace({'[WEBSITE_USER_ID]': grav.user.data.id}) %}
    {% else %}
      {% set iframe_url = config.data.iframe_url %}
    {% endif %}
  {% endif %}
  {% if config.data.application_url %}
    {% if '[WEBSITE_USER_ID]' in config.data.application_url %}
      {% set iframe_url = config.data.application_url | replace({'[WEBSITE_USER_ID]': grav.user.data.id}) %}
    {% else %}
      {% set iframe_url = config.data.application_url %}
    {% endif %}
  {% endif %}
  <iframe src="{{ iframe_url }}" width="100%" height="100%" frameborder="0" style="min-height: 1014px;display: flex; justify-content: center; align-items: center;" onload="document.getElementById('spinner').style.display='none';"></iframe>
{% endblock %}